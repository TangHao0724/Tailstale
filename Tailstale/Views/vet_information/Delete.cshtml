@model vet_information_ViewModel

@{
    ViewData["Title"] = "Delete";
}

@section Styles
{

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        textarea {
            height: 200px;
            width:100%;
        }
    </style>
}


<h4>確認要刪除此筆醫師資料嗎?</h4>
<hr />

<div class="row">
    <div class="col-12 col-md-8 offset-md-2 ">
        <div class="border border-1 border-secondary rounded px-4 py-2">
            <div class="container mt-4">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <dl>
                            <dd class="text-center">
                                <partial name="_showimgPartial">
                            </dd>
                        </dl>
                    </div>
                    <div class="col-12 col-md-6">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.business)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.business.name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.department)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.department.department_name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.vet_name)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.vet_name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.license_number)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.license_number)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <dl>
                            <dt class="">
                                @Html.DisplayNameFor(model => model.profile)
                            </dt>
                            <dd class="">
                                <textarea readonly>
                                    @Html.DisplayFor(model => model.profile)
                                </textarea>
                            </dd>
                            <div class="text-end mt-3">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="vet_ID" />
                                    <input type="submit" value="確認刪除" class="btn btn-outline-danger" id="delete_vet" />
                                    <a asp-action="Index" class="btn btn-outline-primary">返回醫師列表</a>
                                </form>
                            </div>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



