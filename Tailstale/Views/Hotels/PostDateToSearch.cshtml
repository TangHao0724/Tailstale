        <div class="col-3">
            <input  class="form-control" placeholder="搜尋附近旅館" type="text" id="destination" name="destination" />
        </div>
        <div class="col-3 col-md-10">
            <input class="form-control dateRange" style="text-align:center;" type="text" placeholder="日期範圍" />
        </div> 
        <div class="col-3" style="position:relative;">
            <input type="button" id="showCatDog" class="form-control" value="請選擇寵物數量" aria-label="人數" style="width: 100%;">
            <div class="cookie-card" style="display: none; position: absolute; background: white; border: 1px solid #ccc; padding: 10px; z-index: 10;width:100%;">
                <div class="row mb-2" >
                    <div class="col-4 pe-2"><span>貓</span></div>
                    <div class="roomA col-8">
                        <div class='ctrl'>
                            <div class='ctrl__button ctrl__button--decrement'>&ndash;</div>
                            <div class='ctrl__counter'>
                                <input class='ctrl__counter-input' id="Cat" maxlength='2' type='text' value='0' max="5">
                                <div class='ctrl__counter-num'>0</div>
                            </div>
                            <div class='ctrl__button ctrl__button--increment'>+</div>
                        </div>
                    </div>
                </div>
                <div style="height:1px"></div>
                <div class="row">
                    <div class="col-4 pe-2"><span>狗</span></div>
                    <div class="roomA col-8">
                        <div class='ctrl'>
                            <div class='ctrl__button ctrl__button--decrement'>&ndash;</div>
                            <div class='ctrl__counter'>
                                <input class='ctrl__counter-input' id="Dog" maxlength='2' type='text' value='0' max="5">
                                <div class='ctrl__counter-num'>0</div>
                            </div>
                            <div class='ctrl__button ctrl__button--increment'>+</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="actions" style="width:100%;">
                        <button class="accept">
                            完成
                        </button>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="col-3">
            <button class="btn btn-primary p-1" id="bt" style="font-size:18px;height:100%;width:50%">搜尋</button>
        </div>
    </div>
</div>
       
