<!-- UserUpdateModal S-->
<div class="modal fade" id="UserUpdateModal" tabindex="-1" aria-labelledby="UserUpdateModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">修改會員資料</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="UpdateUser">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="updateName" name="updateName" placeholder="名稱">
                        <label for="updateName" class="form-label">名稱</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="updateEmail" name="updateEmail" placeholder="電子信箱">
                        <label for="updateEmail" class="form-label">電子信箱</label>
                    </div>
                    <div class=" form-floating mb-3">
                        <input type="text" class="form-control" id="updateAddress" name="updateAddress" placeholder="聯絡地址">
                        <label for="updateAddress" class="form-label">聯絡地址</label>

                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="updatePhone" name="updatePhone" placeholder="聯絡電話">
                        <label for="updatePhone" class="form-label">聯絡電話</label>

                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="updatePassword" name="updatePassword" placeholder="密碼">
                        <label for="updatePassword" class="form-label">密碼</label>

                    </div>
                    <div class="form-floating mb-3">
                        <select class="form-statusSelect" aria-label="form-statusSelect" id="updateStatus" name="inputeStatus">
                            <option selected>會員狀態</option>
                            <option value="1">尚未驗證</option>
                            <option value="2">已驗證</option>
                            <option value="3">停權</option>
                        </select>

                    </div>
                    <button type="submit" class="btn btn-primary justify-content-end">修改資料</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
