@model IEnumerable<Tailstale.Models.business_img>


<table class="table border table-striped">
    <thead>
        <tr>
            <th>
                類型名稱
                @* @Html.DisplayNameFor(model => model.img_type) *@
            </th>
            <th>
                圖片
                @* @Html.DisplayNameFor(model => model.URL) *@
            </th>
            <th>
                圖片名稱
                @* @Html.DisplayNameFor(model => model.name) *@
            </th>
            <th>
                建立日期
                @* @Html.DisplayNameFor(model => model.created_at) *@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           <td>
                @Html.DisplayFor(modelItem => item.img_type.typename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ID"><i class="bi bi-highlighter"></i>Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID"><i class="bi bi-info-circle"></i>Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
