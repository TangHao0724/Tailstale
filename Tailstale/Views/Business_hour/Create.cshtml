@model Tailstale.Models.Business_hour

@{
    ViewData["Title"] = "Create";
} 
@section Styles {
    <link href="~/css/salonfrom.css" rel="stylesheet" />
}
<div class="container">
<h1>新增營業日</h1>

<h4>新增後會生成一個月份的營業日</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="business_ID" class="control-label">門市</label>
                
                <select asp-for="business_ID" class="form-control" asp-items="ViewBag.business_ID"></select>
            </div>
            <div class="form-group">
                <label asp-for="business_day" class="control-label">營業月</label>
                <input asp-for="business_day" class="form-control" type="month" />
                <span asp-validation-for="business_day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="open_time" class="control-label">開始時間</label>
                <input asp-for="open_time" class="form-control" type="time" value="10:00" />
            </div>
            <div class="form-group">
                <label asp-for="close_time" class="control-label">結束時間</label>
                <input asp-for="close_time" class="form-control" type="time" value="19:00" />
            </div>
            <div class="form-group">
                <label asp-for="people_limit" class="control-label">預約時段人數</label>
                <input asp-for="people_limit" class="form-control" value="2" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-3" asp-action="Index">返回</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
