        <h2 class="text-center myborder p-2">美容門市設定</h2>
        <a class="nav-link text-dark list-group-item p-3" asp-area="" asp-controller="Service" asp-action="Index">服務項目</a>
        <a class="nav-link text-dark list-group-item p-3" asp-area="" asp-controller="Beautician" asp-action="Index">美容師</a>
        <a class="nav-link text-dark list-group-item p-3" asp-area="" asp-controller="Business_hour" asp-action="Index">營業日</a>
        <a class="nav-link text-dark list-group-item p-3" asp-area="" asp-controller="Reserve" asp-action="Index">預約紀錄</a>
        <a class="nav-link text-dark list-group-item p-3" asp-area="" asp-controller="Consumption_Record" asp-action="Index">消費紀錄</a>
        <a class="nav-link text-dark list-group-item p-3" asp-area="" asp-controller="Sbusiness_img" asp-action="Index">作品圖片</a>
        <a class="nav-link text-dark list-group-item p-3" asp-area="" asp-controller="Sbusiness_img_type" asp-action="Index">圖片分類</a>
        <a class="nav-link text-dark list-group-item p-3" asp-area="" asp-controller="Salon" asp-action="businessEdit">門市資料修改</a>

    </div>
    
    </div>



@section scripts
{   
    <script>
        $(document).ready(function () {
            $("#log").on("click", function () {
                axios.delete('api/LNRApi/Logout')
                    .then(response => {
                        console.log(response); // 檢查完整的響應對象
                        if (response.status === 200) {
                            window.location.href = '/User/Index';
                        } else {
                            console.error('Logout failed with status:', response.status);
                        }
                    })
                    .catch(error => {
                        console.error('Error during logout:', error);
                    });
            });
        });

    </script>

}
