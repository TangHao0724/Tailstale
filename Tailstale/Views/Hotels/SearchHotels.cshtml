@model IEnumerable<Tailstale.Tools.hotelResult>

<div class="container">
    <div class="row">
        @foreach (var hotel in Model)
        {
            <div class="card mb-3" style="max-height:200px;max-width:80%" >
                <div class="row">
                    <div class="col-md-4">
                        <img  style="max-width:80%;max-height:180px;border:dotted 2px" src="~/images/noimg.jpg" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@hotel.businesse.name</h5>
                            <h6>每晚房價:@hotel.onedatePrice X @hotel.date 天</h6>

                            <h5 class="card-title"> @hotel.roomPrice 元</h5>
                            
                            <button class="btn-primary">查看訂房狀態</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>





