@model Tailstale.Models.Beautician

@{
    ViewData["Title"] = "Delete";
}
@section Styles{
    <link href="~/css/sshowdelete.css" rel="stylesheet" />
}

<h1>刪除美容師</h1>

<h3>確定是否刪除此筆美容師資料?</h3>
<div>
    <h4>Beautician</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.photo)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Salon_img/@Html.DisplayFor(model => model.photo)" alt="Alternate Text" style="width:300px;height:200px" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Highest_license)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Salon_img/@Html.DisplayFor(model => model.Highest_license)" alt="Alternate Text" style="width:300px;height:200px" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Remark)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Remark)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.business)
        </dt>
        <dd class = "col-sm-10 ddt">
            @Html.DisplayFor(model => model.business.name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            刪除
        </button>|
        <a class="btn btn-secondary" asp-action="Index">返回</a>

        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">刪除美容師</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        請問確定是否要刪除此筆美容師資料
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                        <input type="submit" value="刪除" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
