@model IEnumerable<Tailstale.Models.hosp_history>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.admission_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.discharge_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.memo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.medical_record)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nursing_record)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ward)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.admission_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.discharge_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.memo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.medical_record.admission_process)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nursing_record.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ward.ward_ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
