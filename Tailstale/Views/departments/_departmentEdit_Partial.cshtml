@model department

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.department_ID" />
                <input type="hidden" asp-for="@Model.business_ID">
                <div class="border border-1 border-secondary rounded py-2">
                    <div class="container mt-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group mb-4" id="memo">
                                    <h6>*如因門診異動而須調整科別名稱，請直接建立新科別，毋須更改舊科別名稱</h6>
                                </div>
                                <div class="form-group mb-2">
                                    <label asp-for="@Model.department_name" class="control-label"></label>
                                    <input asp-for="@Model.department_name" class="form-control" />
                                    <span asp-validation-for="@Model.department_name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="text-end my-3">
                                <input type="submit" value="儲存修改" class="btn btn-outline-secondary" />
                                <a asp-action="Index" class="btn btn-outline-primary">返回科別列表</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            let ResultMessage = '@Html.Raw(TempData["ResultMessage"])';
            dataChangeResult();


        });

        function dataChangeResult(ResultMessage) {

            switch (ResultMessage) {
                case 'create_1':
                    alert('新增成功');
                    break;
                case 'create_0':
                    alert('新增失敗');
                    break;
                case 'edit_1':
                    alert('更新成功');
                    break;
                case 'edit_0':
                    alert('更新失敗');
                    break;
                default:
                    break;
            }
        }
    </script>

}


