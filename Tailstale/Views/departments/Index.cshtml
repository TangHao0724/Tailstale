@model IEnumerable<Tailstale.Models.department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.department_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.business)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.department_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.business.name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.department_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.department_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.department_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
