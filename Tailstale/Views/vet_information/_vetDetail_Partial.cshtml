@model vet_information_ViewModel

@{
    ViewData["Title"] = "Details";
}

@section Styles
{

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        #profile{
            width: 100%;
            box-sizing: border-box;
            resize: both;
            white-space: pre-wrap;
            overflow-y:auto;            
        }
    </style>
}

<div class="container">
<div class="row">
    <div class="col-12">
        <div class="border border-1 border-secondary rounded py-2">
            <div class="container mt-4">
                <div class="row">
                    <div class="col-12 col-md-7">
                        <dl>
                            <dd class="text-center">
                                <partial name="_showimgPartial">
                            </dd>
                        </dl>
                    </div>
                    <div class="col-12 col-md-5">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.business)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.business.name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.department)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.department.department_name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.vet_name)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.vet_name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.license_number)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.license_number)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.employment_status)
                            </dt>
                            <dd>
                                @if(Model.employment_status)
                                {
                                    <p>在職</p>
                                }
                                else
                                {
                                    <p>離職</p>
                                }                                
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <dl>
                            <dt class="">
                                @Html.DisplayNameFor(model => model.profile)
                            </dt>
                            <dd class="custom-textarea">
                                @* <textarea id="profile" style="height:200px; width:100%; overflow:scroll;"  readonly>@Html.DisplayFor(model => model.profile)</textarea> *@
                                <div id="profile">
                                    <textarea style="height:200px; width:100%; overflow-y:scroll; overflow-x:hidden;" readonly>
                                         @Html.DisplayFor(model => model.profile)
                                    </textarea>                                    
                                </div>
                            </dd>                            
                        </dl>                       
                    </div>
                    <div class="text-end my-3">
                        <a asp-action="Edit" asp-route-id="@Model?.vet_ID" class="btn btn-outline-secondary me-1">修改醫師資料</a>
                        <a asp-action="Index" class="btn btn-outline-primary">返回醫師列表</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {

        });

    </script>
}