@model Tailstale.Models.department

@{
    ViewData["Title"] = "Create";
}

<div class="col-12 col-lg-8 offset-lg-2 mt-5">
    <h3>新增科別</h3>
    <hr>
    <div class="border border-1 border-secondary rounded px-4 py-2 mb-5">
        <div class="container my-4">
            <div class="row">
                <div class="col-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
                        <div class="form-group mb-2">
                            <label asp-for="department_name" class="control-label"></label>
                            <input asp-for="department_name" class="form-control" />
                            <span asp-validation-for="department_name" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-5 text-end">
                            <input id="submit" type="submit" value="新增" class="btn btn-outline-primary" />
                            <a asp-action="Index" class="btn btn-outline-primary">返回科別列表</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
