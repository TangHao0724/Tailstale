@section Styles
{
    <style>
        .calendar-cell {
            height: 150px;
            width: 14.28%;
            /* 確保每個單元格寬度相等，7天每天佔14.28% */
            position: relative;
            padding: 5px;
            /* 減少內邊距以增加可用空間 */
        }

        .date {
            position: absolute;
            top: 5px;
            right: 5px;
            font-weight: bold;
            font-size: 1.2rem;
            /* 設置日期數字的字體大小 */
        }

        .shift-content {
            height: 120px;
            overflow-y: auto;
            /* 允許垂直滾動，以顯示多個班次 */
            padding-top: 30px;
            /* 為日期數字留出空間 */
            font-size: 0.9rem;
            /* 稍微減小字體大小以適應更多內容 */
        }

        .shift-item {
            display: flex;
            justify-content: space-between;
            /* 使班次名稱和刪除按鈕分別對齊左右 */
            align-items: center;
            margin-bottom: 3px;
            padding: 3px;
            border-radius: 3px;
        }
        
        .shift-text {
            background-color: lightgray;
        }

        .other-month {
            background-color: #f9f9f9;
            /* 淺灰色背景表示非當前月份的日期 */
        }

        #calendar {
            width: 100%;
            table-layout: fixed;
            /* 確保表格列寬度均勻分布 */
        }

        #calendar th {
            text-align: center;
            padding: 10px 5px;
            /* 調整表格標題的內邊距 */
        }
    </style>
}

