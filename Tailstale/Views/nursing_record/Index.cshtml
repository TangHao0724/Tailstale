@model IEnumerable<Tailstale.MedRecordDTO.NursingDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>護理記錄</h1>
<span>
    <a asp-controller="medical_record" asp-action="Index">病歷記錄</a>
    <a asp-controller="Hosp" asp-action="Index">住院記錄</a>
</span>
<br />
<br />
<p>
    <a asp-action="Create">新增記錄</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.datetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hosp_history_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vs_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.memo)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.datetime)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.hosp_history_id)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.vs_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.memo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">修改</a> |
                    <a href="#" onclick="deleteRecord(@item.id)">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        function deleteRecord(id) {
            if (confirm('確定刪除嗎？')) {
                $.ajax({
                    url: '@Url.Action("Delete", "nursing_record")/' + id,
                    type: 'POST',
                    data: { "__RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    success: function (result) {
                        if (result.success) {
                            alert(result.message);
                            location.reload();
                        } else {
                            alert(result.message || '刪除失敗');
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('發生錯誤：' + (xhr.responseJSON ? xhr.responseJSON.message : error));
                    }
                });
            }
        }
    </script>
}
