@model Tailstale.Models.ward

@{
    ViewData["Title"] = "Create";
}

@section Styles
{

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        textarea {
            height: 200px;
            width: 100%;
        }
    </style>
}

<h3>新增病房</h3>
<hr>

<div class="col-12 col-lg-8 offset-lg-2 ">
    <div class="border border-1 border-secondary rounded px-4 py-2">
        <div class="container my-4">
            <div class="row">
                <div class="col-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="business_ID" class="control-label"></label>
                            <select asp-for="business_ID" class="form-control" asp-items="ViewBag.business_ID"></select>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ward_name" class="control-label"></label>
                            <input asp-for="ward_name" class="form-control" autocomplete="off" />
                            <span asp-validation-for="ward_name" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="ward_status" />停用
                            </label>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="memo" class="control-label"></label>
                            <input asp-for="memo" class="form-control" autocomplete="off" />
                            <span asp-validation-for="memo" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3 text-end">
                            <input type="submit" value="新增病房" class="btn btn-outline-success" />
                            <a asp-action="Index" class="btn btn-outline-primary">返回病房列表</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{

}
